<Window x:Class="PR4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Beige">
        <StackPanel 
            Orientation="Horizontal" 
            Grid.Row="0" Margin="10,4,460,395">
            <TextBlock 
                VerticalAlignment="Bottom"
                Text="Дорога" 
                Margin="10,0,0,0"
                Grid.Row="0" />
            <TextBlock 
                VerticalAlignment="Bottom"
                Text="ФИО" 
                Margin="60,0,0,0"
                Grid.Row="0" />
            <TextBlock 
                VerticalAlignment="Bottom"
                Text="Отель" 
                Margin="110,0,0,0"
                Grid.Row="0" />

        </StackPanel>
        <ListBox 
            x:Name="List" Margin="0,22,194,96" Height="NaN" Width="NaN">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock 
                            Grid.Column="0"
                            Text="{Binding Routee.Name}" 
                            FontSize="16" />
                        <TextBlock 
                            Grid.Column="1"
                            Text="{Binding Humann1.Full_name}" 
                            FontSize="16" />
                        <TextBlock 
                            Grid.Column="2"
                            Text="{Binding Hotell1.Name}" 
                            FontSize="16" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Добавить" Margin="10,343,702,49" Click="Button_Click"/>
        <Button Content="Изменить" Margin="103,343,609,49"/>
        <Button Content="Удалить" Margin="196,343,516,49"/>

    </Grid>
</Window>
